  <div class="px-4 py-6">
    <nav aria-label="Main Nav" class="mt-6 flex flex-col space-y-1">
      <%= link_to root_path, class: "flex items-center gap-2 rounded-lg bg-gray-100 px-4 py-2 text-gray-700" do %>
        <!-- SVG: General Icon -->
        <span class="text-sm font-medium">Dashboard</span>
      <% end %>
      <%= content_tag :details, class: "group [&_summary::-webkit-details-marker]:hidden" do %>
        <%= content_tag :summary, class: "flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
          <div class="flex items-center gap-2">
            <!-- SVG: Teams Icon -->
            <span class="text-sm font-medium">Events</span>

          </div>
          <!-- SVG: Chevron Icon -->
        <% end %>
        <nav aria-label="Teams Nav" class="mt-2 flex flex-col px-4">
          <!-- Add team sub-navigation links here -->
        </nav>

      <% end %>
      <!-- Add more top-level navigation links here -->
      <%= content_tag :details, class: "group [&_summary::-webkit-details-marker]:hidden" do %>
        <%= content_tag :summary, class: "flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700" do %>
          <div class="flex items-center gap-2">
            <!-- SVG: Account Icon -->
            <span class="text-sm font-medium">Account</span>
          </div>
          <!-- SVG: Chevron Icon -->
        <% end %>
        <nav aria-label="Account Nav" class="mt-2 flex flex-col px-4">
          <!-- Add account sub-navigation links here -->
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "flex w-full items-center gap-2 rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700" %>
        </nav>
      <% end %>
    </nav>
  </div>
  <div class="sticky inset-x-0 bottom-0 border-t border-gray-100">
    <%= link_to root_path, class: "flex items-center gap-2 bg-white p-4 hover:bg-gray-50" do %>
