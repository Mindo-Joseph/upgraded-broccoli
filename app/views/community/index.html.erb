<!-- Community Page Layout -->
<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-8">Community</h1>
  <div class="grid grid-cols-2 gap-4 mb-4">
    <!-- Left Column -->
    <div>
      <!-- Leaderboard Component -->
      <style>
        .leaderboard-item {
          display: flex;
          align-items: flex-start;
          padding: 10px;
          border-bottom: 1px solid #eee;
        }

        .leaderboard-item:last-child {
          border-bottom: none;
        }

        .rank {
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 1.25rem;
          font-weight: bold;
          width: 40px;
          height: 40px;
          background-color: #eee;
          border-radius: 50%;
          margin-right: 10px;
        }

        .user-info {
          flex-grow: 1;
        }

        .points {
          background-color: #f3f3f3;
          color: #888;
          font-weight: bold;
          display: inline-flex;
          align-items: center;
          padding: 3px 6px;
          margin-left: 5px;
          border-radius: 5px;
          font-size: 0.8rem;
        }
      </style>
      <!-- Leaderboard Component -->
      <div class="card bg-white">
        <div class="bg-blue-500 text-white rounded-t-lg px-6 py-4">
          <h3 class="text-lg font-semibold">Leaderboard</h3>
        </div>
        <div class="card-content">
          <!-- Loop through the leaderboard users and display rankings, names, and points -->
          <div class="leaderboard-item">
            <div class="rank">1</div>
            <div class="user-info">
              <strong>John Doe</strong><span class="points">120 points</span>
            </div>
          </div>
          <div class="leaderboard-item">
            <div class="rank">2</div>
            <div class="user-info">
              <strong>Jane Smith</strong><span class="points">80 points</span>
            </div>
          </div>
          <!-- More leaderboard items -->
        </div>
      </div>
      <!-- Q&A Section -->
      <style>
  .qa-item {
    display: flex;
    align-items: flex-start;
    padding: 10px;
    border-bottom: 1px solid #eee;
  }

  .qa-item:last-child {
    border-bottom: none;
  }

  .question-tag {
    background-color: #f3f3f3;
    color: #888;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    padding: 5px;
    margin-right: 5px;
    border-radius: 5px;
    font-size: 0.8rem;
  }

  .question-title {
    font-weight: bold;
    margin-bottom: 5px;
  }
</style>
